syntax on

set lazyredraw

set autoindent
set smartindent
set cindent

set number
set relativenumber

set ruler
set visualbell

set tabstop=4
set shiftwidth=4
set expandtab

set hidden

set showcmd
set showmode

set hlsearch
set incsearch
set smartcase


map <Space> <leader>
nnoremap <C-c> <Esc>
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l

nnoremap <leader>s :w<cr>
nnoremap <leader>q :q<cr>
nnoremap <leader>l :buffers<cr>
nnoremap <leader>r :registers<cr>
nnoremap <leader>z <C-z>


nnoremap <leader>1 :b1<cr>
nnoremap <leader>2 :b2<cr>
nnoremap <leader>3 :b3<cr>
nnoremap <leader>4 :b4<cr>
nnoremap <leader>5 :b5<cr>
nnoremap <leader>6 :b6<cr>
nnoremap <leader>7 :b7<cr>
nnoremap <leader>8 :b8<cr>
nnoremap <leader>9 :b9<cr>
 
nnoremap <Tab> >>
nnoremap <S-Tab> <<
